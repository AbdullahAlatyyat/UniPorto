@model UniPortoWebsite.EF.CompanyAd
    @using UniPortoWebsite.Helpers

<div class="js-item cover-block project-cover js-project-cover editable cfix" data-id="36759789" data-ordinal="1">
    <div class="cover-img">
        <img src="@Model.Image"  class="cover-img-el" data-pin-nopin="nopin">
    </div>


    <div class="cover-info-stats">
        <div class="cover-info">
            <div class="cover-name">       
             @Model.Title 
                </div>
            <div class="cover-by-wrap">
                <div class="cover-by-link text-ellipsis ">
                    <span class="cover-by">by</span>

                        <span class="js-mini-profile multiple-owner-display-name" data-id="84290">@Model.CompanyName</span>

                </div>
            </div>
        </div>
        <div class="cover-stat-fields-wrap">
            <div class="cover-stat-wrap">
                @Html.LabelFor(p => p.CompanyEmail)
                @Html.DisplayFor(p => p.CompanyEmail)
                <br />
                @Html.LabelFor(p => p.CompanyWebsite)
                @Html.DisplayFor(p => p.CompanyWebsite)

                <br />
                @Html.LabelFor(p => p.Description)
                @Html.DisplayFor(p => p.Description)

                <br />
                @Html.LabelFor(p => p.CompanyPhoneNo)
                @Html.DisplayFor(p => p.CompanyPhoneNo)

            <br />
            <a style="width:100%;" class="btn btn-success" href="@Url.Action("SendCVToCompany","Home",new { adId =Model.Id})" >Apply Now </a>


            </div><!-- .cover-stat-wrap -->

        </div><!-- .cover-info -->
    </div><!-- #cover-stat-fields-wrap -->
</div>



