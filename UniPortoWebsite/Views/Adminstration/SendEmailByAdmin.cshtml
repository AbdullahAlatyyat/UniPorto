@model UniPortoWebsite.Models.EmailByAdminViewModel

<div class="box box-info">


    @using (Html.BeginForm("SendEmailByAdmin", "Adminstration",FormMethod.Post))
    {
    <div class="box-header">
        <i class="fa fa-envelope"></i>
        <h3 class="box-title">Quick Email</h3>

        <!-- /. tools -->
    </div>
    <div class="box-body">

            <div class="form-group">
                @Html.TextBoxFor(p => p.EmailTo, new { @class = "form-control", placeholder = "Email To:" })
                @Html.ValidationMessageFor(p => p.EmailTo, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.TextBoxFor(p => p.Subject, new { @class = "form-control", placeholder = "Subject" })
                @Html.ValidationMessageFor(p => p.Subject, "", new { @class = "text-danger" })


                @*<input type="text" class="form-control" name="subject" placeholder="Subject">*@
            </div>
                            <div>
                                @*<textarea class="textarea" placeholder="Message" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>*@
                           @Html.TextAreaFor(p => p.Message, new { @class = "form-control", placeholder = "Message", @style = "width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" })
                                @Html.ValidationMessageFor(p => p.Message, "", new { @class = "text-danger" })


                              </div>

    </div>
    <div class="box-footer clearfix">
        <button type="submit" class="pull-right btn btn-default" id="sendEmail">
            Send
            <i class="fa fa-arrow-circle-right"></i>
        </button>
    </div>
        }
</div>

