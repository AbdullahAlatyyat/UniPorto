    function RemoveProfile(profileId) {
        $.ajax({
            url: '@Url.Action("DeleteUser", "Adminstration")',
            type: "POST",
            data: {
                id: profileId,
            },
            success: function (data) {
                location.reload();
            },
            error: function (error) {
                alert("ERROR");
            }
        });
    }
    function ActiveProfile(profileId) {
        $.ajax({
            url: '@Url.Action("ActiveUser", "Adminstration")',
            type: "POST",
            data: {
                id: profileId,
            },
            success: function (data) {
                location.reload();

            },
            error: function (error) {
                alert("ERROR");
            }
        });
    }
</script>
