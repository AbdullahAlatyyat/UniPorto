@model UniPortoWebsite.Models.ActivityViewModel
@if (Model.AttachmentsTypeId == 1)
{
        <div class="col-xs-12 col-md-6 col-lg-6 item">
            <div class="timeline-block">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="media">
                            <div class="media-left">
                                <a href="">
                                    <img src="~/Content/ProfileTheme/images/people/50/guy-2.jpg" class="media-object">
                                </a>
                            </div>
                            <div class="media-body">
                                <a href="#" class="pull-right text-muted"><i class="icon-reply-all-fill fa fa-2x "></i></a>
                                <a href="">@Html.DisplayFor(p => p.CreatedBy)</a>
                                <span>@Html.DisplayFor(p => p.CreatedOn)</span>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <p>
                            @Html.DisplayFor(p => p.Status)
                        </p>
                    </div>
                    <div class="view-all-comments">
                        <a href="#">
                            <i class="fa fa-comments-o"></i> View all
                        </a>
                        <span>No comments</span>
                    </div>
                    <ul class="comments">
                        <li class="media">
                            <div class="media-left">
                                <a href="">
                                    <img src="~/Content/ProfileTheme/images/people/50/guy-5.jpg" class="media-object">
                                </a>
                            </div>
                            <div class="media-body">
                                <div class="pull-right dropdown" data-show-hover="li">
                                    <a href="#" data-toggle="dropdown" class="toggle-button">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">Edit</a></li>
                                        <li><a href="#">Delete</a></li>
                                    </ul>
                                </div>
                                <a href="" class="comment-author pull-left">Bill D.</a>
                                <span>Hi Mary, Nice Party</span>
                                <div class="comment-date">21st September</div>
                            </div>
                        </li>

                        <li class="comment-form">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <a href="" class="btn btn-default"><i class="fa fa-photo"></i></a>
                                </span>
                                <input type="text" class="form-control" />
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    
}

