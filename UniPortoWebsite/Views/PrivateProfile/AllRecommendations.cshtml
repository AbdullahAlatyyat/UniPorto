@model List<UniPortoWebsite.EF.Recommendation>
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <br />
        <div class="panel panel-default">
            <ul class="comments">
                @foreach (var item in Model)
                {



                    <li clas="media">
                        <div class="media-left">
                            @if (item.Profile.ProfileImage != null)
                            {
                                <img src="@item.Profile.ProfileImage" style="width:50px;height:50px" class="media-object">

                            }
                            else
                            {
                                <img src="~/Content/user-default.png" style="width:50px;height:50px" class="media-object" />
                            }
                        </div>
                        @*<div class="panel panel-default">
                                <div class="panel-heading">
                                    <strong>@item.CreatedBy</strong> <span class="text-muted">@item.CreatedOn.ToShortDateString()</span>
                                </div>
                                <div class="panel-body">
                                @item.Title
                                </div><!-- /panel-body -->
                            </div><!-- /panel panel-default -->*@

                        <div class="media-body">
                            <a class="comment-author">@item.CreatedBy</a>
                            <span>@item.Title</span>
                            <div class="comment-date">@item.CreatedOn.ToShortDateString()</div>
                        </div>
                    </li>

                }

            </ul>

        </div>
    </div>
</div>

