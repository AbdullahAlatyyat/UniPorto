@using UniPortoWebsite.Helpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta http-equiv="cache-control" content="no-cache">
    <meta name="language" content="english">
    @*<link rel="shortcut icon" href="https://cdn4.iconfinder.com/data/icons/new-google-logo-2015/400/new-google-favicon-512.png" />*@
    <link rel="icon" href="https://uniporto.blob.core.windows.net/uniporto/2.png">
    <title>@ViewBag.Title</title>

    <link href="~/Content/ProfileTheme/css/vendor/all.css" rel="stylesheet">
    <link href="~/Content/ProfileTheme/css/app/app.css" rel="stylesheet">
    <link href="~/Content/ProfileTheme/css/Styles/StyleSheet1.css" rel="stylesheet">
    <link href="~/Content/ProfileTheme/css/Styles/StyleSheet2.css" rel="stylesheet">
    <link href="~/Content/ProfileTheme/css/Styles/StyleSheet3.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <style>
        .element {
            position: fixed;
            top: 50%;
            right: 2%;
        }

        div.show-image {
            position: relative;
            float: left;
            margin: 5px;
        }

            div.show-image:hover input {
                display: block;
            }

            div.show-image input {
                position: absolute;
                top: 0;
                left: 0;
                display: none;
            }

        div.show-image {
            position: relative;
            float: left;
            margin: 5px;
        }

            div.show-image:hover img {
                opacity: 0.5;
            }

            div.show-image:hover input {
                display: block;
            }

            div.show-image input {
                position: absolute;
                display: none;
            }

                div.show-image input.update {
                    top: 0;
                    left: 0;
                }

                div.show-image input.delete {
                    top: 0;
                    left: 0;
                }
    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>

<body class="logged-out en_US networki responsive section-gallery viewing-projects be-network" lang="en">
    <div class="navbar navbar-main navbar-primary navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Uni-Porto</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->

            <div class="navbar navbar-main navbar-primary navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Main","Home")"><img src="~/Content/whiteLogoSmall.png" style="height:40px;width:110px;padding-top:10px"/></a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="main-nav">

                        <ul class="nav navbar-nav  navbar-right ">

                            <!-- User -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle user" data-toggle="dropdown">
                                    @if (UniPortoContext.LoggedInUser.ProfileImage != null)
                                    {
                                        <img src="@UniPortoContext.LoggedInUser.ProfileImage" alt="Bill" class="img-circle" width="40" />  @UniPortoContext.LoggedInUser.FullName  <span class="caret"></span>
                                    }
                                    else
                                    {
                                        <img src="~/Content/user-default.png" alt="Bill" class="img-circle" width="40" />  @UniPortoContext.LoggedInUser.FullName  <span class="caret"></span>

                                    }
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href='@Url.Action("Index","PrivateProfile")'>My Profile</a></li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                                    @using Microsoft.AspNet.Identity
                                    @if (Request.IsAuthenticated)
                                    {
                                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                        {
                                            @Html.AntiForgeryToken()

                                        }
                                    }

                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
            </div>
            <!-- /.navbar-collapse -->
        </div>

    </div>

    <div id="top-panel" class="slide-panel js-top-panel">
        <a id="top-panel-blocking" class="js-top-panel-blocking"></a>
        <!-- .toolbar -->

        <div id="showcase-and-discover" class="cta-header dark-background">
            <h1 class="cta-header-title">
                <img src="~/Content/whiteLogo.png" width="200" />
            </h1>
            <span class="hide-phone">


            </span>
        </div>
        <div id="site-content" class="js-site-content">
            @RenderBody()
        </div>

    </div>



</body>
</html>
