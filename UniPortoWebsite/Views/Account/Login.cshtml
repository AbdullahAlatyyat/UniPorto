@using UniPortoWebsite.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/Login_RegisterLayout.cshtml";
}

<div id="content">
    <div class="container-fluid">
        <div class="lock-container">
            <h1>Account Access</h1>
            <div class="panel panel-default text-center">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()
                    <img src="~/Content/logo.png" width="180">
                    <div class="panel-body">
                        @Html.Label("Email / University ID", new { @class = " control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" ,@placeholder="Email / University ID" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password " })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        <div class="row">
                            <a href="@Url.Action("ForgotPassword","Account")" class="forgot-password">Forget Password ?</a>

                        </div>
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <a href="javascript:document.getElementById('loginForm').submit()" style="width:100%" class="btn btn-success">Login </a>

                            </div>

                            <div class="col-md-6">

                                <a href="@Url.Action("Register", "Account")" class="btn btn-success" style="width:100%;">Register</a>
                            </div>
                        </div>


                    </div>

                }
            </div>
        </div>
        </div>
    </div>
